{
  "$schema": "http://json-schema.org/draft/2019-WIP/schema#",
  "$id": "https://spec.openapis.org/oas/3.1/meta",
  "$vocabulary": {
    "https://specs.openapis.org/oas/3.1/vocab/openapi": true
  },
  "$recursiveAnchor": true,
  "title": "OpenAPI Vocabulary Schema",
  "type": ["object", "boolean"],
  "allOf": [
    {
      "$ref": "http://json-schema.org/draft/2019-WIP/schema"
    },
    {
      "properties": {
        "type": {
          "oneOf" : [
            {
              "$ref": "#/$defs/AllowedTypes"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/AllowedTypes"
              }
            }
          ]
        },
        "nullable": {
          "type": "boolean",
          "default": false,
          "deprecated": true
        },
        "discriminator": {
          "$ref": "#/$defs/Discriminator"
        },
        "example": {
          "deprecated": true
        },
        "externalDocs": {
          "$ref": "#/$defs/ExternalDocumentation" // how to reference this from openapi-vocabulary.json
        },
        "xml": {
          "$ref": "#/$defs/XML"
        }
      }
    }
  ],
  "patternProperties": {
    "^x-": {
    }
  },
  "additionalProperties": false,
  "$defs": {
    "AllowedTypes": {
      "type": "string",
      "enum": [
        "array",
        "boolean",
        "integer",
        "number",
        "object",
        "string",
        "null"
      ]
    },
    "Discriminator": {
      "type": "object",
      "required": [
        "propertyName"
      ],
      "properties": {
        "propertyName": {
          "type": "string"
        },
        "mapping": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "XML": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string",
          "format": "uri"
        },
        "prefix": {
          "type": "string"
        },
        "attribute": {
          "type": "boolean",
          "default": false
        },
        "wrapped": {
          "type": "boolean",
          "default": false
        }
      },
      "patternProperties": {
        "^x-": {
        }
      },
      "additionalProperties": false
    }
  }
}
